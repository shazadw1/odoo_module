[options]
db_host = localhost
db_port = 5432
db_user = <%= @pg_username %>
db_password = <%= @pg_password %>
default_productivity_apps = True
addons_path = /opt/<%= @odoo_user %>/ce/addons,/opt/<%= @odoo_user %>/enterprise,/opt/<%= @odoo_user %>/custom_addons
http_port = 8069
data_dir = /opt/<%= @odoo_user %>/data_dir
logfile = /var/log/odoo/<%= @odoo_user %>.log
xmlrpc_interface = 127.0.0.1
netrpc_interface = 127.0.0.1
proxy_mode = True